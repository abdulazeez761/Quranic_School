@model Hifz.DTOs.RegisterParentDto
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Title"];
}

<!-- Page Header -->
<div class="d-flex justify-between align-center mb-lg flex-wrap gap-md">
    <div>
        <h2 class="section-title mb-sm">
            <i class='bx bx-user-plus' style="color: var(--primary-green);"></i>
            @Localizer["PageTitle"]
        </h2>
        <p class="text-medium">@Localizer["PageDescription"]</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline">
            <i class='bx bx-arrow-back'></i>
            <span>@Localizer["BackToList"]</span>
        </a>
    </div>
</div>

<!-- Validation Summary Alert -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mb-lg" role="alert">
        <i class='bx bx-error-circle'></i>
        <div>
            <strong>@Localizer["ValidationErrorsTitle"]</strong>
            <div asp-validation-summary="All" class="mt-sm"></div>
        </div>
    </div>
}

<!-- Form Card -->
<div class="card card-standard" style="width: 70%; margin:0 auto;">
    <form asp-action="Create" method="post" class="form" id="parentForm" data-validate>

        <!-- Personal Information Section -->
        <div class="card-header">
            <h3 class="card-title">
                <i class='bx bx-user'></i>
                @Localizer["PersonalInformation"]
            </h3>
        </div>

        <div class="card-body">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label required">
                        <i class='bx bx-user'></i>
                        @Localizer["FirstName"]
                    </label>
                    <input asp-for="FirstName" class="form-input" placeholder="@Localizer["FirstNamePlaceholder"]"
                        autofocus />
                    <span asp-validation-for="FirstName" class="form-feedback form-feedback-invalid"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SecondName" class="form-label required">
                        <i class='bx bx-user'></i>
                        @Localizer["LastName"]
                    </label>
                    <input asp-for="SecondName" class="form-input" placeholder="@Localizer["LastNamePlaceholder"]" />
                    <span asp-validation-for="SecondName" class="form-feedback form-feedback-invalid"></span>
                </div>
            </div>

            <div class="divider"></div>

            <!-- Contact Information -->
            <h4 class="mb-md mt-lg d-flex align-center gap-sm">
                <i class='bx bx-phone' style="color: var(--primary-green);"></i>
                @Localizer["ContactInformation"]
            </h4>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label required">
                        <i class='bx bx-phone'></i>
                        @Localizer["PhoneNumber"]
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">+962</span>
                        <input asp-for="PhoneNumber" class="form-input"
                            placeholder="@Localizer["PhoneNumberPlaceholder"]" pattern="[0-9]{9,10}"
                            title="@Localizer["PhoneNumberTitle"]" />
                    </div>
                    <small class="helper-text">@Localizer["PhoneNumberHelper"]</small>
                    <span asp-validation-for="PhoneNumber" class="form-feedback form-feedback-invalid"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Username" class="form-label required">
                        <i class='bx bx-user'></i>
                        @Localizer["Username"]
                    </label>
                    <input asp-for="Username" class="form-input"
                        placeholder="@Localizer["UsernamePlaceholder"]" />
                    <small class="helper-text">@Localizer["UsernameHelper"]</small>
                    <span asp-validation-for="Username" class="form-feedback form-feedback-invalid"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <i class='bx bx-envelope'></i>
                    @Localizer["Email"]
                </label>
                <input asp-for="Email" type="email" class="form-input"
                    placeholder="@Localizer["EmailPlaceholder"]" />
                <small class="helper-text">@Localizer["EmailHelper"]</small>
                <span asp-validation-for="Email" class="form-feedback form-feedback-invalid"></span>
            </div>

            <div class="divider"></div>

            <!-- Account Security -->
            <h4 class="mb-md mt-lg d-flex align-center gap-sm">
                <i class='bx bx-lock-alt' style="color: var(--primary-green);"></i>
                @Localizer["PasswordSection"]
            </h4>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Password" class="form-label required">
                        <i class='bx bx-lock'></i>
                        @Localizer["Password"]
                    </label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-input" id="passwordInput"
                            placeholder="@Localizer["PasswordPlaceholder"]" minlength="6" />
                        <button type="button" class="input-group-text" onclick="togglePassword('passwordInput', this)"
                            style="cursor: pointer;">
                            <i class='bx bx-show'></i>
                        </button>
                    </div>
                    <small class="helper-text">@Localizer["PasswordHelper"]</small>
                    <span asp-validation-for="Password" class="form-feedback form-feedback-invalid"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label required">
                        <i class='bx bx-lock-open'></i>
                        @Localizer["ConfirmPassword"]
                    </label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" type="password" class="form-input" id="confirmPasswordInput"
                            placeholder="@Localizer["ConfirmPasswordPlaceholder"]" />
                        <button type="button" class="input-group-text"
                            onclick="togglePassword('confirmPasswordInput', this)" style="cursor: pointer;">
                            <i class='bx bx-show'></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="form-feedback form-feedback-invalid"></span>
                </div>
            </div>

            <input type="hidden" name="Role" value="Parent" />
        </div>

        <!-- Form Actions -->
        <div class="card-footer">
            <div class="form-actions form-actions-right">
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <i class='bx bx-save'></i>
                    <span>@Localizer["SaveData"]</span>
                </button>
                <a asp-action="Index" class="btn btn-outline">
                    <i class='bx bx-x'></i>
                    <span>@Localizer["Cancel"]</span>
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Help Card -->
<div class="card card-standard" style="width: 70%; margin:0 auto;">
    <div class="card-body">
        <h4 class="mb-md">
            <i class='bx bx-help-circle' style="color: var(--info);"></i>
            @Localizer["FillInstructions"]
        </h4>
        <ul class="list-disc" style="margin-right: var(--space-lg); line-height: 1.8;">
            <li>@Localizer["HelpInstruction1"]</li>
            <li>@Localizer["HelpInstruction2"]</li>
            <li>@Localizer["HelpInstruction3"]</li>
            <li>@Localizer["HelpInstruction4"]</li>
        </ul>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/student/forms.js"></script>
}
