@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
@{
    var isArabic = System.Threading.Thread.CurrentThread.CurrentCulture.Name.StartsWith("ar");
    string? studentName = User.FindFirstValue(ClaimTypes.Name);
}

<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.Name" dir="@(isArabic ? "rtl" : "ltr")">

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @Localizer["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#648c51" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#648c51" />
    <meta name="apple-mobile-web-app-title" content="Hafiz" />
    <meta name="description" content="Quran School Management System for teachers, students, and parents" />

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/icons/icon-192.png" />

    <!-- Fonts & Icons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link
    href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap"
    rel="stylesheet">
    <link rel="icon" type="image/svg+xml"
          href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 576 512'><path fill='%23648c51' d='M249.6 471.5c10.8 3.8 22.4-4.1 22.4-15.5V78.6c0-4.2-1.6-8.4-5-11C247.4 52 202.4 32 144 32C93.5 32 46.3 45.3 18.1 56.2C6.5 60.9 0 71.7 0 83.8V394.1c0 11.9 12.8 20.2 24.1 16.5C55.6 399.8 95.2 384 144 384c46.6 0 80.4 11.6 105.6 23.5zM288 78.6V456c0 11.4 11.7 19.3 22.4 15.5C335.6 459.6 369.4 448 416 448c48.8 0 84.4 15.8 119.9 26.6C547.2 478.3 560 470 560 458.1V83.8c0-12.1-6.5-22.9-18.1-27.6C513.7 45.3 466.5 32 416 32c-58.4 0-103.4 20-123 35.6c-3.3 2.6-5 6.8-5 11z'/></svg>" />
    <link rel="icon" type="image/png" sizes="96x96" href="/icons/icon-96.png" />
    <!-- Core CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/student/student-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin/switchLanguage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pwa-install.css" asp-append-version="true" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div class="student-layout">
        <!-- Top Header -->
        <header class="student-header">
            <div class="header-left">
                <h1 class="header-title">@Localizer["StudentPortal"]</h1>
                <p class="header-subtitle">@Localizer["SystemName"]</p>
            </div>

            <div class="header-right">
                <!-- Language Switcher -->
                <div class="language-switcher">
                    <button class="language-btn" id="languageToggle" aria-label="Switch Language">
                        <i class='bx bx-globe'></i>
                        <span id="currentLang">@(isArabic ? "العربية" : "English")</span>
                        <i class='bx bx-chevron-down'></i>
                    </button>
                    <ul class="language-menu" id="languageMenu">
                        <li>
                            <a href="#" data-lang="ar" class="language-option @(isArabic ? "active" : "")">
                                <i class='bx bx-check'></i>
                                <span>العربية</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" data-lang="en" class="language-option @(!isArabic ? "active" : "")">
                                <i class='bx bx-check'></i>
                                <span>English</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- User Profile -->
                <div class="user-profile">
                    <div class="user-info">
                        <div class="user-name">@studentName</div>
                        <div class="user-role">@Localizer["StudentRole"]</div>
                    </div>
                    <div class="user-avatar">
                        <i class='bx bx-user'></i>
                    </div>
                </div>

                <!-- Logout Button -->
                <a asp-area="" asp-controller="Auth" asp-action="Logout" class="logout-btn">
                    <i class='bx bx-log-out'></i>
                    <span>@Localizer["LogOut"]</span>
                </a>
            </div>
        </header>

        <!-- Navigation Tabs -->
        <nav class="student-nav">
            <ul class="nav-tabs">
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                    <a asp-area="Student" asp-controller="Home" asp-action="Index">
                        <i class='bx bx-home-alt'></i>
                        <span>@Localizer["Dashboard"]</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")">
                    <a asp-area="Student" asp-controller="Profile" asp-action="Index">
                        <i class='bx bx-user-circle'></i>
                        <span>@Localizer["Profile"]</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Attendance" ? "active" : "")">
                    <a asp-area="Student" asp-controller="Attendance" asp-action="Index">
                        <i class='bx bx-calendar-check'></i>
                        <span>@Localizer["Attendance"]</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Wird" ? "active" : "")">
                    <a asp-area="Student" asp-controller="Wird" asp-action="Index">
                        <i class='bx bx-book-open'></i>
                        <span>@Localizer["Wirds"]</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Meeting" ? "active" : "")">
                    <a asp-area="Student" asp-controller="Meeting" asp-action="Index">
                        <i class='bx bx-video'></i>
                        <span>@Localizer["Meetings"]</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="student-content">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/student/student-layout.js" asp-append-version="true"></script>
    <script src="~/js/languageSwitcher.js" asp-append-version="true"></script>
    <script src="~/js/pwa-install.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>