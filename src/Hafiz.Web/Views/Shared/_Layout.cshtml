@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
<!DOCTYPE html>
@{
    var isArabic = Thread.CurrentThread.CurrentCulture.Name.StartsWith("ar");
}

<html lang="@CultureInfo.CurrentCulture.Name" dir="@(isArabic ? "rtl" : "ltr")">

@inject IViewLocalizer Localizer

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#648c51"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="apple-mobile-web-app-status-bar-style" content="#648c51"/>
    <meta name="apple-mobile-web-app-title" content="Hafiz"/>
    <meta name="description" content="Quran School Management System for teachers, students, and parents"/>

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json"/>

    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 576 512'><path fill='%23648c51' d='M249.6 471.5c10.8 3.8 22.4-4.1 22.4-15.5V78.6c0-4.2-1.6-8.4-5-11C247.4 52 202.4 32 144 32C93.5 32 46.3 45.3 18.1 56.2C6.5 60.9 0 71.7 0 83.8V394.1c0 11.9 12.8 20.2 24.1 16.5C55.6 399.8 95.2 384 144 384c46.6 0 80.4 11.6 105.6 23.5zM288 78.6V456c0 11.4 11.7 19.3 22.4 15.5C335.6 459.6 369.4 448 416 448c48.8 0 84.4 15.8 119.9 26.6C547.2 478.3 560 470 560 458.1V83.8c0-12.1-6.5-22.9-18.1-27.6C513.7 45.3 466.5 32 416 32c-58.4 0-103.4 20-123 35.6c-3.3 2.6-5 6.8-5 11z'/></svg>"/>
    <link rel="icon" type="image/png" sizes="96x96" href="/icons/icon-96.png"/>
    <link rel="apple-touch-icon" href="/icons/icon-192.png"/>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/pwa-install.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Hafiz.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">

</head>

<body>
<header class="main-header">
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid px-4">
            <!-- Brand/Logo -->
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="brand-icon">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="brand-text">
                    <span class="brand-name">@Localizer["Hafiz"]</span>
                    <small class="brand-tagline">@Localizer["Education"]</small>
                </div>
            </a>

            <!-- Mobile Menu Toggle -->
            <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <!-- Navigation Menu -->
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i>
                            @Localizer["Home"]
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#features">
                            <i class="fas fa-star"></i>
                            @Localizer["Features"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">
                            <i class="fas fa-info-circle"></i>
                            @Localizer["About"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#achievements">
                            <i class="fas fa-trophy"></i>
                            @Localizer["Achievements"]
                        </a>
                    </li>
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Hafiz"> *@
                    @*         <i class="fa-solid fa-book-quran"></i> *@
                    @*         @Localizer["OurHafiz"] *@
                    @*     </a> *@
                    @* </li> *@
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Plans"> *@
                    @*         <i class="fas fa-money-check-alt"></i> *@
                    @*         @Localizer["Plan"] *@
                    @*     </a> *@
                    @* </li> *@
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                            <i class="fa-solid fa-envelope"></i>
                            @Localizer["Contact"]
                        </a>
                    </li>
                </ul>

                <!-- Language Switcher and Actions -->
                <div class="navbar-nav ms-auto d-flex align-items-center">
                    <!-- Language Switcher -->
                    <div class="nav-item dropdown language-dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <i class="fas fa-globe"></i>
                            <span class="d-none d-md-inline">@(isArabic ? "العربية" : "English")</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <form method="post" asp-controller="Home" asp-action="SetLanguage"
                                      class="dropdown-form">
                                    <input type="hidden" name="culture" value="en"/>
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path"/>
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-flag-usa"></i> English
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form method="post" asp-controller="Home" asp-action="SetLanguage"
                                      class="dropdown-form">
                                    <input type="hidden" name="culture" value="ar"/>
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path"/>
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-flag"></i> العربية
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>

                    <!-- Action Buttons -->
                    <div class="nav-actions">
                        <a asp-controller="Auth" asp-action="Login"
                           class="btn btn-outline-primary btn-sm me-2">@Localizer["Login"]</a>
                        @* <a href="#" class="btn btn-primary btn-sm">@Localizer["Enroll Now"]</a> *@
                    </div>

                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content - Full Width -->
<main role="main">
    @RenderBody()
</main>

<!-- Footer -->
<footer class="main-footer">
    <div class="footer-content">
        <div class="container-fluid px-4">
            <div class="row">
                <!-- About Section -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5 class="footer-title">
                            <i class="fas fa-book-open me-2"></i>
                            Al-Quran Academy
                        </h5>
                        <p class="footer-description">
                            @Localizer["Empowering students in their journey of Quran memorization through                innovative technology and traditional Islamic teaching methods."]
                        </p>
                        <div class="social-links">
                            <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">@Localizer["Quick Links"]</h6>
                        <ul class="footer-links">
                            <li><a href="#about">@Localizer["About Us"]</a></li>
                            <li><a href="#features">@Localizer["Features"]</a></li>
                            <li><a href="#achievements">@Localizer["Achievements"]</a></li>
                            <li><a asp-controller="Home" asp-action="Privacy">@Localizer["Privacy Policy"]</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Programs -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">@Localizer["Programs"]</h6>
                        <ul class="footer-links">
                            <li><a href="#">@Localizer["Hafiz Program"]</a></li>
                            <li><a href="#">@Localizer["Tajweed Classes"]</a></li>
                            <li><a href="#">@Localizer["Online Learning"]</a></li>
                            <li><a href="#">@Localizer["Parent Portal"]</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-section">
                        <h6 class="footer-subtitle">@Localizer["Contact Information"]</h6>
                        <div class="contact-info">
                            <div class="contact-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@Localizer["Irbid, Jordan"]</span>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-phone"></i>
                                <span>+962 XXX XXX XXX</span>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-envelope"></i>
                                <span>info@alquranacademy.com</span>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-clock"></i>
                                <span>@Localizer["Sun - Thu: 8:00 AM - 6:00 PM"]</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="copyright">
                        &copy; 2025 Al-Quran Academy. @Localizer["All rights reserved."]
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="developed-by">
                        @Localizer["Developed with"] <i
                            class="fas fa-heart text-danger"></i> @Localizer["for                      Islamic Education"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
@RenderSection("Styles", false)

</body>