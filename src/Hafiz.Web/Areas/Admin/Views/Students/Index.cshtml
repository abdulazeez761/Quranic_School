@model IEnumerable<Hafiz.Models.Student>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Title"];
}
<!-- Page Header -->
<div class="d-flex justify-between align-center mb-lg flex-wrap gap-md">
    <div>
        <h2 class="section-title mb-sm">
            <i class='bx bx-user' style="color: var(--primary-green);"></i>
            @Localizer["PageTitle"]
        </h2>
        <p class="text-medium">@Localizer["PageDescription"]</p>
    </div>
    <div class="btn-group">
        <a asp-action="Create" class="btn btn-primary">
            <i class='bx bx-user-plus'></i>
            <span>@Localizer["AddNewStudent"]</span>
        </a>
        <button class="btn btn-outline" id="exportBtn">
            <i class='bx bx-download'></i>
            <span>@Localizer["Export"]</span>
        </button>
    </div>
</div>

<!-- Statistics Cards -->
@{
    var totalStudents = Model.Count();
    var totalClasses = Model.SelectMany(s => s.Classes).Select(c => c.Id).Distinct().Count();
    var studentsWithClasses = Model.Count(s => s.Classes.Any());
    var studentsWithoutClasses = totalStudents - studentsWithClasses;
}

<div class="grid-auto-fit mb-lg">
    <div class="card card-stat">
        <div class="card-stat-icon">
            <i class='bx bx-user'></i>
        </div>
        <div class="card-stat-content">
            <div class="card-stat-label">@Localizer["TotalStudents"]</div>
            <div class="card-stat-value">@totalStudents</div>
        </div>
    </div>

    <div class="card card-stat">
        <div class="card-stat-icon" style="background: var(--success);">
            <i class='bx bx-check-circle'></i>
        </div>
        <div class="card-stat-content">
            <div class="card-stat-label">@Localizer["WithClasses"]</div>
            <div class="card-stat-value">@studentsWithClasses</div>
        </div>
    </div>

    <div class="card card-stat">
        <div class="card-stat-icon" style="background: var(--warning);">
            <i class='bx bx-error'></i>
        </div>
        <div class="card-stat-content">
            <div class="card-stat-label">@Localizer["WithoutClasses"]</div>
            <div class="card-stat-value">@studentsWithoutClasses</div>
        </div>
    </div>

    <div class="card card-stat">
        <div class="card-stat-icon" style="background: var(--info);">
            <i class='bx bx-group'></i>
        </div>
        <div class="card-stat-content">
            <div class="card-stat-label">@Localizer["NumberOfClasses"]</div>
            <div class="card-stat-value">@totalClasses</div>
        </div>
    </div>
</div>

<!-- Students Table -->
<div class="table-container">
    <!-- Search and Filter Toolbar -->
    <div class="table-toolbar">
        <div class="table-search">
            <input type="text" id="searchInput" placeholder="@Localizer["SearchPlaceholder"]">
            <i class='bx bx-search'></i>
        </div>
        <div class="table-filters">
            <select class="form-select form-input-sm" id="classFilter">
                <option value="">@Localizer["AllClasses"]</option>
                @{
                    var allClasses = Model.SelectMany(s => s.Classes)
                    .Select(c => c.Name)
                    .Distinct()
                    .OrderBy(name => name);

                    foreach (var className in allClasses)
                    {
                        <option value="@className">@className</option>
                    }
                }
            </select>
            <button id="clearFilters" class="btn btn-outline btn-sm">
                <i class='bx bx-refresh'></i>
                <span class="d-none d-md-inline">@Localizer["Reset"]</span>
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="table-wrapper">
        <table class="table table-responsive-cards">
            <thead>
                <tr>
                    <th style="width: 50px;">#</th>
                    <th class="sortable">
                        <i class='bx bx-user'></i> @Localizer["FirstName"]
                    </th>
                    <th class="sortable">
                        <i class='bx bx-user'></i> @Localizer["LastName"]
                    </th>
                    <th>
                        <i class='bx bx-user'></i> @Localizer["Username"]
                    </th>
                    <th>
                        <i class='bx bx-phone'></i> @Localizer["PhoneNumber"]
                    </th>
                    <th>
                        <i class='bx bx-group'></i> @Localizer["Classes"]
                    </th>
                    <th class="text-center" style="width: 180px;">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody id="studentsTableBody">
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var student in Model)
                    {
                        var classes = string.Join(", ", student.Classes.Select(c => c.Name));
                        var classesData = string.Join(",", student.Classes.Select(c => c.Name));
                        var hasClasses = student.Classes.Any();

                        <tr class="table-row" data-firstname="@student.StudentInfo.FirstName.ToLower()"
                            data-secondname="@student.StudentInfo.SecondName.ToLower()" data-classes="@classesData">

                            <td class="text-center text-medium" data-label="#">@index</td>

                            <td data-label="@Localizer["FirstName"]">
                                <div class="d-flex align-center gap-sm">
                                    <div class="avatar-sm"
                                         style="background: var(--primary-green); color: white; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                                        @student.StudentInfo.FirstName.Substring(0, 1)
                                    </div>
                                    <span class="fw-medium">@student.StudentInfo.FirstName</span>
                                </div>
                            </td>

                            <td data-label="@Localizer["LastName"]">
                                <span class="fw-medium">@student.StudentInfo.SecondName</span>
                            </td>

                            <td data-label="@Localizer["Username"]">
                                <div class="d-flex align-center gap-xs">
                                    <i class='bx bx-user text-medium'></i>
                                    <span class="text-truncate" style="max-width: 200px;" title="@student.StudentInfo.Username">
                                        @student.StudentInfo.Username
                                    </span>
                                </div>
                            </td>

                            <td data-label="@Localizer["PhoneNumber"]">
                                <div class="d-flex align-center gap-xs">
                                    <i class='bx bx-phone text-medium'></i>
                                    <span>@student.StudentInfo.PhoneNumber</span>
                                </div>
                            </td>

                            <td data-label="@Localizer["Classes"]">
                                @if (hasClasses)
                                {
                                    <div class="d-flex flex-wrap gap-xs">
                                        @foreach (var className in student.Classes.Select(c => c.Name))
                                        {
                                            <span class="chip chip-primary">@className</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="badge badge-warning">
                                        <i class='bx bx-info-circle'></i> @Localizer["NoClasses"]
                                    </span>
                                }
                            </td>

                            <td data-label="@Localizer["Actions"]">
                                <div class="table-actions">
                                    <a asp-action="Details" asp-route-id="@student.UserId" class="table-action-btn"
                                           data-tooltip="@Localizer["ViewDetails"]">
                                        <i class='bx bx-show'></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@student.UserId" class="table-action-btn"
                                           data-tooltip="@Localizer["Edit"]">
                                        <i class='bx bx-edit'></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@student.UserId" method="post"
                                          class="d-inline delete-form">
                                        <button type="submit" class="table-action-btn danger"
                                                data-confirm-delete="@string.Format(Localizer["DeleteConfirmation"].Value, student.StudentInfo.FirstName, student.StudentInfo.SecondName)"
                                                data-tooltip="@Localizer["Delete"]">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">
                            <div class="table-empty">
                                <i class='bx bx-user-x'></i>
                                <h3 class="table-empty-title">@Localizer["NoDataAvailable"]</h3>
                                <p class="text-medium">@Localizer["NoStudentsAdded"]</p>
                                <a asp-action="Create" class="btn btn-primary mt-md">
                                    <i class='bx bx-user-plus'></i> @Localizer["AddNewStudent"]
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Table Footer -->
    <div class="table-footer">
        <div class="table-info">
            @Html.Raw(string.Format(Localizer["ShowingStudents"].Value,
            $"<strong><span id='visibleCount'>{totalStudents}</span></strong>",
                        $"<strong>{totalStudents}</strong>"))
        </div>
    </div>
</div>
@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/student/search.js"></script>
    <script src="~/js/confirmModal.js"></script>
}