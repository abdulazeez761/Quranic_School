@using Microsoft.AspNetCore.Mvc.Localization
@model Hafiz.DTOs.TeacherDto
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit_Title"]; // (NEW KEY)
    ViewData["UseSelect2"] = true;
}

<div class="d-flex justify-between align-center mb-lg flex-wrap gap-md">
    <div>
        <h2 class="section-title mb-sm">
            <i class='bx bx-edit-alt' style="color: var(--primary-green);"></i>
            @Localizer["Edit_Teacher"]
        </h2>
        <p class="text-medium">@Localizer["Edit_Info"] </p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline">
            <i class='bx bx-arrow-back'></i>
            <span>@Localizer["Go_Back"]</span>
        </a>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mb-lg" role="alert">
        <i class='bx bx-error-circle'></i>
        <div>
            <strong>@Localizer["FIx_errors"]</strong>
            <div asp-validation-summary="ModelOnly" class="mt-sm"></div>
        </div>
    </div>
}

<div class="card card-standard" style="width: 70%; margin:0 auto;">
    <form asp-action="Edit" method="post" class="form" id="teacherForm" data-validate>
        <input type="hidden" asp-for="Id" />

        <div class="card-header">
            <h3 class="card-title">
                <i class='bx bx-user'></i>
                @Localizer["Personal_Info"]
            </h3>
        </div>

        <div class="card-body">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label required">
                        <i class='bx bx-user'></i>
                        @Localizer["First_Name"]
                    </label>
                    <input asp-for="FirstName" class="form-input" placeholder=@Localizer["example_F_Name"] autofocus />
                    <span asp-validation-for="FirstName" class="form-feedback form-feedback-invalid"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SecondName" class="form-label required">
                        <i class='bx bx-user'></i>
                        @Localizer["Family"] @* اسم العائلة *@
                    </label>
                    <input asp-for="SecondName" class="form-input" placeholder=@Localizer["example_Familly_Name"] />
                    <span asp-validation-for="SecondName" class="form-feedback form-feedback-invalid"></span>
                </div>
            </div>

            <div class="divider"></div>

            <h4 class="mb-md mt-lg d-flex align-center gap-sm">
                <i class='bx bx-phone' style="color: var(--primary-green);"></i>
                @Localizer["Contact_Information"]
            </h4>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label required">
                        <i class='bx bx-phone'></i>
                        @Localizer["Phone_Num"]
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">+962</span>
                        <input asp-for="PhoneNumber" class="form-input" placeholder="79XXXXXXX" pattern="[0-9]{9,10}"
                            title=@Localizer["Phone_TItle"] />
                    </div>
                    <small class="helper-text">@Localizer["Phone_Example"]</small>
                    <span asp-validation-for="PhoneNumber" class="form-feedback form-feedback-invalid"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Username" class="form-label required">
                        <i class='bx bx-user'></i>
                        @Localizer["Username"]
                    </label>
                    <input asp-for="Username" class="form-input" placeholder="username123" />
                    <small class="helper-text">@Localizer["UsernameHelper"]</small>
                    <span asp-validation-for="Username" class="form-feedback form-feedback-invalid"></span>
                </div>
            </div>

            <div class="divider"></div>

            <h4 class="mb-md mt-lg d-flex align-center gap-sm">
                <i class='bx bx-lock-alt' style="color: var(--primary-green);"></i>
                @Localizer["PassWord"]
            </h4>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class='bx bx-lock'></i>
                    @Localizer["New_Password"]
                </label>
                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-input" id="passwordInput"
                        placeholder=@Localizer["Edit_Password_Placeholder"] minlength="6" />
                    <button type="button" class="input-group-text" onclick="togglePassword('passwordInput', this)"
                        style="cursor: pointer;">
                        <i class='bx bx-show'></i>
                    </button>
                </div>
                <small class="helper-text">@Localizer["Edit_Password_Note"] </small>
                <span asp-validation-for="Password" class="form-feedback form-feedback-invalid"></span>
            </div>
        </div>

        <div class="card-footer">
            <div class="form-actions form-actions-right">
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <i class='bx bx-save'></i>
                    <span>@Localizer["Save_Changes"] </span>
                </button>
                <a asp-action="Index" class="btn btn-outline">
                    <i class='bx bx-x'></i>
                    <span>@Localizer["Cancel"]</span>
                </a>
            </div>
        </div>
    </form>
</div>

<div class="card card-standard" style="width: 70%; margin:0 auto;">
    <div class="card-body">
        <h4 class="mb-md">
            <i class='bx bx-help-circle' style="color: var(--info);"></i>
            @Localizer["Edit_Guide_Title"]
        </h4>
        <ul class="list-disc" style="margin-right: var(--space-lg); line-height: 1.8;">
            <li>@Localizer["Required_Fields"]</li>
            <li>@Localizer["Phone_Format"]</li>
            <li>@Localizer["Email_Use"]</li>
            <li>@Localizer["Edit_Password_Instr"]
            <li>@Localizer["Data_Verification"]</li>
        </ul>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/teacher/forms.js"></script>
}