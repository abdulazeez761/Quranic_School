@{
    ViewData["Title"] = Localizer["PageTitle"].Value;
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
}

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!-- Hero Section -->
<section class="contact-hero">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="contact-hero-title">@Localizer["ContactTitle"]</h1>
                <p class="contact-hero-subtitle">@Localizer["ContactSubtitle"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Info Cards -->
<section class="contact-info-section">
    <div class="container">
        <div class="row g-4 justify-content-center">
            <div class="col-lg-3 col-md-6">
                <div class="contact-card">
                    <div class="contact-card-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h5>@Localizer["Address"]</h5>
                    <p>@Localizer["AddressValue"]</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="contact-card">
                    <div class="contact-card-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <h5>@Localizer["Phone"]</h5>
                    <p dir="ltr">+962 XXX XXX XXX</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="contact-card">
                    <div class="contact-card-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h5>@Localizer["Email"]</h5>
                    <p>info@alquranacademy.com</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="contact-card">
                    <div class="contact-card-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h5>@Localizer["WorkHours"]</h5>
                    <p>@Localizer["WorkHoursValue"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form + Map -->
<section class="contact-form-section">
    <div class="container">
        <div class="row g-5 align-items-start">
            <!-- Contact Form -->
            <div class="col-lg-7">
                <div class="form-wrapper">
                    <h3 class="form-title">@Localizer["SendMessage"]</h3>
                    <p class="form-subtitle">@Localizer["FormSubtitle"]</p>
                    <form id="contact-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">@Localizer["FullName"] *</label>
                                    <input type="text" class="form-control" name="Name" required
                                           placeholder="@Localizer["FullNamePlaceholder"]">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">@Localizer["EmailLabel"] *</label>
                                    <input type="email" class="form-control" name="Email" required
                                           placeholder="example@email.com" dir="ltr">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">@Localizer["PhoneNumber"]</label>
                                    <input type="tel" class="form-control" name="Phone" placeholder="+962 XXX XXX XXX"
                                           dir="ltr">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Subject"] *</label>
                                    <select class="form-control" name="Subject" required>
                                        <option value="">@Localizer["SelectSubject"]</option>
                                        <option value="استفسار عام">@Localizer["GeneralInquiry"]</option>
                                        <option value="التسجيل">@Localizer["Registration"]</option>
                                        <option value="الدعم الفني">@Localizer["TechnicalSupport"]</option>
                                        <option value="اقتراح">@Localizer["Suggestion"]</option>
                                        <option value="أخرى">@Localizer["Other"]</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Localizer["Message"] *</label>
                            <textarea class="form-control" name="Message" rows="5" required
                                      placeholder="@Localizer["MessagePlaceholder"]"></textarea>
                        </div>
                        <button type="submit" class="btn btn-contact-submit">
                            <i class="fas fa-paper-plane"></i> @Localizer["SendButton"]
                        </button>
                    </form>
                </div>
            </div>

            <!-- Social & Quick Info -->
            <div class="col-lg-5">
                <div class="side-info-wrapper">
                    <h3 class="side-info-title">@Localizer["FollowUs"]</h3>
                    <p class="side-info-text">@Localizer["FollowUsDesc"]</p>
                </p>

                <div class="social-links">
                    <a href="#" class="social-link whatsapp" title="واتساب">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    <a href="#" class="social-link telegram" title="تيليجرام">
                        <i class="fab fa-telegram-plane"></i>
                    </a>
                    <a href="#" class="social-link instagram" title="انستجرام">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="social-link youtube" title="يوتيوب">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>

                <div class="faq-mini">
                    <h4>@Localizer["FAQ"]</h4>
                    <div class="faq-item">
                        <div class="faq-question" onclick="this.parentElement.classList.toggle('open')">
                            <span>@Localizer["FAQ1Q"]</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>@Localizer["FAQ1A"]</p>
                        </div>
                    </div>
                    <div class="faq-item">
                        <div class="faq-question" onclick="this.parentElement.classList.toggle('open')">
                            <span>@Localizer["FAQ2Q"]</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>@Localizer["FAQ2A"]</p>
                        </div>
                    </div>
                    <div class="faq-item">
                        <div class="faq-question" onclick="this.parentElement.classList.toggle('open')">
                            <span>@Localizer["FAQ3Q"]</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>@Localizer["FAQ3A"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>