@{
    ViewData["Title"] = Localizer["PageTitle"].Value;
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6">
                    <h1 class="hero-title">@Localizer["Welcome"]</h1>
                    <p class="hero-subtitle">@Localizer["Heart"]</p>
                    <p class="hero-description">
                        @Localizer["PlatForm"]
                    </p>
                    <div class="hero-buttons">
                        <a href="#registration" class="btn btn-primary btn-lg">@Localizer["Start Learning"]</a>
                        <a href="#about" class="btn btn-outline-light btn-lg">@Localizer["Learn More"]</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <div class="floating-card">
                            <i class="fas fa-book-open"></i>
                            <h4>@Localizer["Track"]</h4>
                            <p>@Localizer["Monitor"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="scroll-arrow"></div>
    </div>
</section>

