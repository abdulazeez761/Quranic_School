                    <div class="target-icon">
                        <i class="fas fa-child"></i>
                    </div>
                    <h4>@Localizer["TargetChildren"]</h4>
                    <p>@Localizer["TargetChildrenDesc"]</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="target-card">
                    <div class="target-icon">
                        <i class="fas fa-female"></i>
                    </div>
                    <h4>@Localizer["TargetGirls"]</h4>
                    <p>@Localizer["TargetGirlsDesc"]</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="target-card">
                    <div class="target-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4>@Localizer["TargetParents"]</h4>
                    <p>@Localizer["TargetParentsDesc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

