<!-- Registration Section -->
<section class="registration-section" id="registration">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="section-title">@Localizer["RegistrationTitle"]</h2>
                <p class="section-subtitle">@Localizer["RegistrationSubtitle"]</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-card">
                    <form id="registration-form" method="post" action="/Home/Register">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">@Localizer["FullName"] *</label>
                                    <input type="text" class="form-control" name="FullName" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">@Localizer["ChildAge"] *</label>
                                    <select class="form-control" name="ChildAge" required>
                                        <option value="">@Localizer["SelectAge"]</option>
                                        <option value="5">@Localizer["5Years"]</option>
                                        <option value="6">@Localizer["6Years"]</option>
                                        <option value="7">@Localizer["7Years"]</option>
                                        <option value="8">@Localizer["8Years"]</option>
                                        <option value="9">@Localizer["9Years"]</option>
                                        <option value="10">@Localizer["10Years"]</option>
                                        <option value="11">@Localizer["11Years"]</option>
                                        <option value="12">@Localizer["12Years"]</option>
                                        <option value="13">@Localizer["13Years"]</option>
                                        <option value="14">@Localizer["14Years"]</option>
                                        <option value="15">@Localizer["15Years"]</option>
                                        <option value="16">@Localizer["16Years"]</option>
                                        <option value="17">@Localizer["17Years"]</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">@Localizer["Country"] *</label>
                                    <input type="text" class="form-control" name="Country" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">@Localizer["WhatsApp"] *</label>
                                    <input type="tel" class="form-control" name="WhatsApp" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">@Localizer["Notes"]</label>
                            <textarea class="form-control" name="Notes" rows="4"
                                      placeholder="@Localizer["NotesPlaceholder"]"></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane"></i> @Localizer["SubmitRequest"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->

<section class="cta-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <h2 class="cta-title">@Localizer["CTATitle"]</h2>
                <p class="cta-subtitle">@Localizer["CTASubtitle"]</p>
                <div class="cta-buttons">
                    <a href="#registration" class="btn btn-primary btn-lg me-3">@Localizer["RegisterNow"]</a>
                    <a class="btn btn-outline-light btn-lg" href="#contact">@Localizer["ContactUs"]</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {

    <script src="~/js/home.js"></script>
}