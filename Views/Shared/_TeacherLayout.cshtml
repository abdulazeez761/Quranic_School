@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
@{
    var isArabic = System.Threading.Thread.CurrentThread.CurrentCulture.Name.StartsWith("ar");
    string? teacherName = User.FindFirstValue(ClaimTypes.Name);
}

<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.Name" dir="@(isArabic ? "rtl" : "ltr")">

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["title"]</title>

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#648c51" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#648c51" />
    <meta name="apple-mobile-web-app-title" content="Hifz" />
    <meta name="description" content="Quran School Management System for teachers, students, and parents" />

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/icons/icon-192.png" />
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ”¥</text></svg>">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/admin/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/teacher/teacher-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/teacher/mobile-optimization.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin/switchLanguage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pwa-install.css" asp-append-version="true" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div class="teacher-layout">
        <!-- Top Header -->
        <header class="teacher-header">
            <div class="header-left">
                <h1 class="header-title">@Localizer["TeacherPortal"]</h1>
                <p class="header-subtitle">@Localizer["SystemName"]</p>
            </div>

            <div class="header-right">
                <!-- Language Switcher -->
                <div class="language-switcher">
                    <button class="language-btn" id="languageToggle" aria-label="Switch Language">
                        <i class='bx bx-globe'></i>
                        <span id="currentLang">Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©</span>
                        <i class='bx bx-chevron-down'></i>
                    </button>
                    <ul class="language-menu" id="languageMenu">
                        <li>
                            <a href="#" data-lang="ar" class="language-option active">
                                <i class='bx bx-check'></i>
                                <span>Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" data-lang="en" class="language-option">
                                <i class='bx bx-check'></i>
                                <span>English</span>
                            </a>

                        </li>
                    </ul>
                </div>

                <!-- User Profile -->
                <div class="user-profile">
                    <div class="user-info">
                        <div class="user-name">@teacherName</div>
                        <div class="user-role">@Localizer["TeacherRole"]</div>
                    </div>
                    <div class="user-avatar">
                        <i class='bx bx-user'></i>
                    </div>
                </div>

                <!-- Logout Button -->
                <a asp-area="" asp-controller="Auth" asp-action="Logout" class="logout-btn">
                    <i class='bx bx-log-out'></i>
                    <span>@Localizer["LogOut"]</span>
                </a>
            </div>
        </header>

        <!-- Navigation Tabs -->
        <nav class="teacher-nav" role="navigation" aria-label="Main Navigation">
            <ul class="nav-tabs">
                <li class="@IsActive("Home", "Index", "Teacher")">
                    <a asp-area="Teacher" asp-controller="Home" asp-action="Index"
                           aria-current="@(IsActive("Home", "Index", "Teacher") == "active" ? "page" : "")">
                        <i class='bx bx-grid-alt'></i>
                        <span>@Localizer["Classes"]</span>
                    </a>
                </li>

                <li class="@IsActive("Student", "Index", "Teacher")">
                    <a asp-area="Teacher" asp-controller="Student" asp-action="Index"
                           aria-current="@(IsActive("Student", "Index", "Teacher") == "active" ? "page" : "")">
                        <i class='bx bx-group'></i>
                        <span>@Localizer["Students"]</span>
                    </a>
                </li>
                <li class="@IsActive("Wird", "Index", "Teacher")">
                    <a asp-action="Index" asp-controller="Wird" asp-area="Teacher">
                        <i aria-current="@(IsActive("Wird", "Index", "Teacher") == "active" ? "page" : "")" class='bx
                        bx-book-open'></i>
                        <span>@Localizer["Wirds"]</span>
                    </a>
                </li>
                <li class="@IsActive("TeacherClasses", "ManageMeetings", "Teacher")">
                    <a asp-area="Teacher" asp-controller="TeacherClasses" asp-action="ManageMeetings"
                           aria-current="@(IsActive("TeacherClasses", "ManageMeetings", "Teacher") == "active" ? "page" : "")">
                        <i class='bx bx-video'></i>
                        <span>@Localizer["Meetings"]</span>
                    </a>
                </li>

                <li class="@IsActive("StudentAttendance", "Index", "Teacher")">
                    <a asp-area="Teacher" asp-controller="StudentAttendance" asp-action="Index"
                           aria-current="@(IsActive("StudentAttendance", "Index", "Teacher") == "active" ? "page" : "")">
                        <i class='bx bx-calendar-check'></i>
                        <span>@Localizer["Attendance"]</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="teacher-content" role="main">
            @RenderBody()
        </main>
    </div>

<!-- Scripts -->
<!-- Language Switcher Script - Must load BEFORE teacher-layout.js -->
<script src="~/js/languageSwitcher.js" asp-append-version="true"></script>

    <!-- Teacher Layout Script -->
    <script src="~/js/teacher/teacher-layout.js" asp-append-version="true"></script>

    <!-- PWA Installation Script -->
    <script src="~/js/pwa-install.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

@functions {
    string IsActive(string controller, string action, string area = "")
    {
        var routeData = Context.Request.RouteValues;
        var currentController = routeData["controller"]?.ToString();
        var currentAction = routeData["action"]?.ToString();
        var currentArea = routeData["area"]?.ToString() ?? "";

        return (string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase)) ? "active" : "";
    }
}
</body>

</html>