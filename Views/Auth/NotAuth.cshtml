@{
    ViewData["Title"] = "Not Authorized";
    Layout = "";
}

<link rel="stylesheet" href="~/css/shared/error-auth.css" asp-append-version="true" />

<div class="error-container">
    <div class="error-center">
        <div class="error-card">
            <div class="error-header">
                <h4>Access Denied</h4>
            </div>
            <div class="error-body">
                <div style="margin-bottom: 1rem;">
                    <svg style="width: 64px; height: 64px; color: #dc3545; margin: 0 auto;" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                        </path>
                    </svg>
                </div>
                <p>You do not have permission to view this page.</p>
                <p style="font-size: 0.875rem; color: #6c757d; margin-bottom: 1.5rem;">Please contact the
                    administrator if you believe this is an error.</p>
                <a href="@Url.Action("Index", "Home")" class="auth-button">Go to Home</a>
            </div>
        </div>
    </div>
</div>